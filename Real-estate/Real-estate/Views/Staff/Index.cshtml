@model IEnumerable<Real_estate.Models.Staff>

@{
    //Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Staff</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="align-content-end">
        @using (Html.BeginForm("Index","Staff")) {
            @Html.DropDownList("PosDropDown",ViewBag.Position as SelectList, " Select Position")
            <input type="submit" value="Search">

        }
        @Html.ActionLink("Back to List","Index")
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch_BranchNoRef)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch_BranchNoRef)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.StaffNo }) |
                @Html.ActionLink("Details", "Details", new { id=item.StaffNo }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.StaffNo })
            </td>
        </tr>
    }
    
    </table>
    <div class="form-actions no-color">

        | @Html.ActionLink("Back to Home", "Index", "Home/Index")
    </div>
</body>
</html>
